<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/top_title_color"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/title_bar_left_menu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/personal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="7dp"
                android:text="@string/app_name"
                android:textColor="@color/whitesmoke"
                android:textSize="24sp" />

            <Button
                android:id="@+id/title_bar_right_menu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/account_info" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/tv_bigNum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:scrollbars="none"
                    android:singleLine="true"
                    android:text="0.0"
                    android:textSize="20sp" />
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_smallNum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="0.0"
                    android:textSize="30sp" />
            </HorizontalScrollView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/remark" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:src="@drawable/guide_point_selector" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:paddingLeft="15dip"
            android:paddingRight="15dp"
            android:src="@drawable/guide_point_selector" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:src="@drawable/guide_point_selector" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_save" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_one"
                style="@style/key_btn_style"
                android:text="1" />

            <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_save" />

            <Button
                android:id="@+id/btn_two"
                style="@style/key_btn_style"
                android:text="2" />

            <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_save" />

            <Button
                android:id="@+id/btn_three"
                style="@style/key_btn_style"
                android:text="3" />

            <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_save" />

            <Button
                android:id="@+id/btn_delete"
                style="@style/key_btn_style"
                android:text="删除" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_save" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_four"
                style="@style/key_btn_style"
                android:text="4" />

            <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_save" />

            <Button
                android:id="@+id/btn_five"
                style="@style/key_btn_style"
                android:text="5" />

            <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_save" />

            <Button
                android:id="@+id/btn_six"
                style="@style/key_btn_style"
                android:text="6" />

            <ImageView
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_save" />

            <Button
                android:id="@+id/btn_plus"
                style="@style/key_btn_style"
                android:text="+" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_save" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_seven"
                        style="@style/key_btn_style"
                        android:text="7" />

                    <ImageView
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_save" />

                    <Button
                        android:id="@+id/btn_eight"
                        style="@style/key_btn_style"
                        android:text="8" />

                    <ImageView
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_save" />

                    <Button
                        android:id="@+id/btn_nine"
                        style="@style/key_btn_style"
                        android:text="9" />

                    <ImageView
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_save" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_save" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_clear"
                        style="@style/key_btn_style"
                        android:text="C" />

                    <ImageView
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_save" />

                    <Button
                        android:id="@+id/btn_zero"
                        style="@style/key_btn_style"
                        android:text="0" />

                    <ImageView
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_save" />

                    <Button
                        android:id="@+id/btn_dial"
                        style="@style/key_btn_style"
                        android:text="." />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/keyboard"
                android:gravity="center"
                android:text="√"
                android:textColor="@color/top_title_color"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
